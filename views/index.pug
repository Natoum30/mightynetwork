extends layout

block content
  .container
    p.lead
      !=messages()
    h2 Something on your mind ?
    |
    form(action="/", method="POST")
      .form-group 
        textarea(name="note", placeholder="Share it with the fediverse",cols="50")
      .form-group
        input(type="submit")
    h2 See some notes below :
      each note in notes
        .jumbotron
          p 
            a(href='/users/'+ note.author_username) #{note.author_username}
              span @#{note.author_host} 
            span wrote : 
            span= note.note 
          p.date=note.created_at
      else
        .jumbotron
          p No notes yet
