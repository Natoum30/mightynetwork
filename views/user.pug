extends layout

block content
  .container
    p.lead
      !=messages()
    h2 #{author}'s notes :
      each note in notes
        .jumbotron
          p 
            a(href='/users/'+ author)  #{author}
              span @#{host} 
            span wrote : 
            span= note.note 
          p.date=note.created_at

      else
        .jumbotron
          p No notes yet
  
