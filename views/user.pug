extends layout

block content
  .container
    p.lead
      !=messages()
    h2 #{author}@#{host}'s notes :
      each note in notes
        .jumbotron
          p 
            a(href= note.actor)  #{author}
            span 
            small (#{author}@#{host})
          p= note.content 
          small 
            a(href='/users/'+ author + '/note/' + note.id) clic
          p.date= note.published

      else
        .jumbotron
          p No notes yet
  
